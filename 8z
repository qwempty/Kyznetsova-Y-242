import math
x = float(input('x : '))
y = float(input('y : '))
z = float(input('z : '))
t = float(input('t : '))
d = math.sqrt(x * x + y * y)
def Sq1(x, y):
    return x * y * 0.5
def Sq2(d, z, t):
    p = (z + t + d) / 2
    return math.sqrt(p * (p - z) * (p - t) * (p - d))
print(Sq1(x, y) + Sq2(d, z, t))
